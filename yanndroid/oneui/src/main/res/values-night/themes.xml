<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OneUI3Theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="isOneUI4">false</item>
        <item name="android:windowBackground">@color/sesl_round_and_bgcolor</item>
        <item name="android:statusBarColor">@color/sesl_round_and_bgcolor</item>
        <item name="android:navigationBarColor">@color/sesl_round_and_bgcolor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorStyle</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>

        <item name="android:textColorPrimary">@color/sesl_primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/sesl_primary_text</item>
        <item name="android:textColorSecondary">@color/sesl_secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/sesl_secondary_text</item>
        <item name="android:textColorHighlight">@color/sesl_highlighted_text_color</item>
        <item name="android:textColorAlertDialogListItem">@color/sesl_select_dialog_list_item_text</item>

        <item name="android:listDivider">@drawable/sesl_list_divider</item>

        <item name="android:theme">@style/OneUI3StyleMain</item>
        <item name="theme">@style/OneUI3StyleMain</item>
        <item name="toolbarTheme">@style/OneUI3StyleMain</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
        <item name="alertDialogCenterButtons">false</item>
        <item name="buttonBarStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="dialogTheme">@style/DialogTheme</item>
        <item name="dialogPreferredPadding">@dimen/sesl_dialog_padding</item>
    </style>
</resources>