<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SamsungTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>

        <item name="android:theme">@style/SamsungStyleMain</item>

        <item name="switchStyle">@style/SwitchStyle</item>

        <item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarLayoutStyle</item>

        <item name="tabLayoutStyle">@style/TabLayoutStyle</item>

        <item name="tooltipForegroundColor">@color/sesl_tooltip_foreground_dark</item>
        <item name="tooltipFrameBackground">@color/sesl_tooltip_background_dark</item>

    </style>
</resources>