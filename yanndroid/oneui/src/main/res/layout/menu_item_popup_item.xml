<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_item_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/sesl_popup_menu_item_min_width"
    android:minHeight="@dimen/sesl_popup_menu_item_min_height"
    android:orientation="vertical">

    <de.dlyt.yanndroid.oneui.menu.widget.MenuDivider
        android:id="@+id/menu_group_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginStart="@dimen/sesl_popup_menu_divider_start_margin"
        android:layout_marginTop="@dimen/sesl_popup_menu_divider_top_margin"
        android:layout_marginEnd="@dimen/sesl_popup_menu_divider_end_margin"
        android:layout_marginBottom="@dimen/sesl_popup_menu_divider_bottom_margin" />


    <LinearLayout
        android:id="@+id/menu_item_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sesl_popup_menu_item_padding"
        android:paddingTop="@dimen/sesl_popup_menu_item_top_padding"
        android:paddingEnd="@dimen/sesl_popup_menu_item_padding"
        android:paddingBottom="@dimen/sesl_popup_menu_item_bottom_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layoutDirection="locale">

        <ImageView
            android:id="@+id/menu_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menu_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_weight="1"
            android:fontFamily="@font/sesl_roboto"
            android:paddingStart="7.0dip"
            android:paddingEnd="7.0dip"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="?actionMenuTextColor"
            android:textDirection="locale" />

        <TextView
            android:id="@+id/menu_item_badge"
            android:layout_width="@dimen/sesl_menu_item_badge_size"
            android:layout_height="@dimen/sesl_menu_item_badge_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7.0dip"
            android:layout_marginEnd="7.0dip"
            android:background="@drawable/sesl_noti_badge"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:textColor="@color/sesl_menu_badge_text_color"
            android:textSize="@dimen/sesl_menu_item_badge_text_size"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/menu_item_check_box"
            android:layout_width="32.0dip"
            android:layout_height="24.0dip"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_samsung_arrow_right"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>