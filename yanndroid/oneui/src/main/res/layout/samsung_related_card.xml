<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/related_card_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/widget_related_card_view_margin_top_bottom"
    android:paddingEnd="@dimen/widget_related_card_view_margin_start_end"
    android:paddingBottom="@dimen/widget_related_card_view_margin_top_bottom">

    <TextView
        android:id="@+id/related_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_related_card_title_text_margin_bottom"
        android:layout_weight="1.0"
        android:fontFamily="sec-roboto-light"
        android:paddingStart="@dimen/widget_related_card_view_margin_start_end"
        android:text="@string/sec_relative_description"
        android:textColor="@color/sesl_primary_text_color"
        android:textSize="@dimen/widget_related_card_title_text_size" />

    <LinearLayout
        android:id="@+id/related_card_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/widget_related_card_text_margin_start" />
</LinearLayout>