<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" app:roundedCorners="bottom_left|bottom_right">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_layout_toolbar" android:layout_width="fill_parent" android:layout_height="?actionBarSize" android:layout_gravity="bottom" android:paddingStart="@dimen/sesl_action_bar_content_inset" app:layout_collapseMode="pin" app:popupTheme="@style/SamsungStyleMain">

        <LinearLayout
            android:layout_width="fill_parent" android:layout_height="?actionBarSize" android:gravity="center_vertical">

            <!-- custom navigation button -->
            <FrameLayout
                android:id="@+id/toolbar_layout_navigationButton_container" android:layout_width="wrap_content" android:layout_height="?actionBarSize" android:layout_gravity="center">
                <de.dlyt.yanndroid.oneui.widget.ToolbarImageButton
                    android:id="@+id/toolbar_layout_navigationButton" android:layout_width="48dp" android:layout_height="?actionBarSize" android:layout_marginStart="8dp" android:background="@drawable/sesl_action_bar_item_background" android:scaleType="center" />
            </FrameLayout>

            <!-- custom toolbar title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/toolbar_layout_collapsed_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@android:color/transparent" android:alpha="0.0" android:singleLine="true" android:textColor="?actionMenuTextColor" android:textDirection="locale" style="@style/CollapsedActionBarTitleTextStyle" />

            <!-- custom overflow buttons -->
            <RelativeLayout
                android:layout_width="fill_parent" android:layout_height="?actionBarSize" android:gravity="end|center_vertical">
                <LinearLayout
                    android:id="@+id/toolbar_layout_overflow_container" android:layout_width="wrap_content" android:layout_height="?actionBarSize" android:orientation="horizontal" android:layout_alignParentEnd="true" android:paddingEnd="8.0dip"/>
                <View
                    android:layout_gravity="center|top" android:id="@+id/toolbar_layout_popup_window_anchor" android:layout_width="1.0px" android:layout_height="1.0px" android:layout_marginEnd="12.0dip" android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <de.dlyt.yanndroid.oneui.RoundLinearLayout
        android:id="@+id/toolbar_layout_main_container" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" app:roundedCorners="top_left|top_right" app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior" />

</de.dlyt.yanndroid.oneui.RoundLinearLayout>