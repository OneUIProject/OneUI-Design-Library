<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="@dimen/bottom_bar_item_image_size"
        android:layout_height="@dimen/bottom_bar_item_image_size"
        android:layout_marginBottom="1dp"
        app:tint="@color/bottom_bar_item_image_color" />

    <TextView
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/bottom_bar_item_text_size" />

</LinearLayout>