<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SamsungTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>

        <item name="android:theme">@style/SamsungStyleMain</item>

        <item name="switchStyle">@style/SwitchStyle.Light</item>

        <item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarLayoutStyle.Light</item>

        <item name="tabLayoutStyle">@style/TabLayoutStyle.Light</item>

        <item name="tooltipForegroundColor">@color/sesl_tooltip_foreground_light</item>
        <item name="tooltipFrameBackground">@color/sesl_tooltip_background_light</item>

    </style>

    <style name="SamsungSplashTheme" parent="@style/SamsungTheme">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/splash_background</item>
    </style>

    <style name="SamsungAboutTheme" parent="@style/SamsungSplashTheme" />

</resources>