<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OneUITheme" parent="@style/OneUI4Theme" />
    <style name="OneUISplashTheme" parent="@style/OneUI4SplashTheme" />
    <style name="OneUIAboutTheme" parent="@style/OneUI4AboutTheme" />

    <style name="OneUI3Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="isOneUI4">false</item>
        <item name="android:windowBackground">@color/sesl_round_and_bgcolor</item>
        <item name="android:statusBarColor">@color/sesl_round_and_bgcolor</item>
        <item name="android:navigationBarColor">@color/sesl_round_and_bgcolor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorStyle</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>

        <item name="roundedCornerColor">@color/sesl_round_and_bgcolor</item>

        <item name="android:textColorPrimary">@color/sesl_primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/sesl_primary_text</item>
        <item name="android:textColorSecondary">@color/sesl_secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/sesl_secondary_text</item>
        <item name="android:textColorHighlight">@color/sesl_highlighted_text_color</item>
        <item name="android:textColorAlertDialogListItem">@color/sesl_select_dialog_list_item_text
        </item>

        <item name="android:listDivider">@drawable/sesl_list_divider</item>

        <item name="android:theme">@style/OneUI3StyleMain</item>
        <item name="theme">@style/OneUI3StyleMain</item>
        <item name="toolbarTheme">@style/OneUI3StyleMain</item>

        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <style name="OneUI3SplashTheme" parent="@style/OneUI3Theme">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/splash_background</item>
    </style>

    <style name="OneUI3AboutTheme" parent="@style/OneUI3SplashTheme" />


    <style name="OneUI4Theme" parent="OneUI3Theme">
        <item name="isOneUI4">true</item>
        <item name="android:windowBackground">@color/sesl4_round_and_bgcolor</item>
        <item name="android:statusBarColor">@color/sesl4_round_and_bgcolor</item>
        <item name="android:navigationBarColor">@color/sesl4_round_and_bgcolor</item>

        <item name="roundedCornerColor">@color/sesl4_round_and_bgcolor</item>

        <item name="android:textColorPrimary">@color/sesl4_primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/sesl4_primary_text</item>

        <item name="android:listSeparatorTextViewStyle">@style/OneUI4.ListSeparatorStyle</item>

        <item name="android:theme">@style/OneUI4StyleMain</item>
        <item name="theme">@style/OneUI4StyleMain</item>
        <item name="toolbarTheme">@style/OneUI4StyleMain</item>

        <item name="alertDialogTheme">@style/OneUI4.DialogTheme</item>
    </style>

    <style name="OneUI4SplashTheme" parent="@style/OneUI4Theme">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/splash_background</item>
    </style>

    <style name="OneUI4AboutTheme" parent="@style/OneUI4SplashTheme" />

</resources>