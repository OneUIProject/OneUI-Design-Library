<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OneUITheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorStyle</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>

        <item name="android:textColorPrimary">@color/sesl_primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/sesl_primary_text</item>
        <item name="android:textColorSecondary">@color/sesl_secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/sesl_secondary_text</item>
        <item name="android:textColorHighlight">@color/sesl_highlighted_text_color</item>
        <item name="android:textColorAlertDialogListItem">@color/sesl_select_dialog_list_item_text
        </item>

        <item name="android:listDivider">@drawable/sesl_list_divider</item>

        <item name="android:theme">@style/OneUIStyleMain</item>
        <item name="theme">@style/OneUIStyleMain</item>

        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <style name="OneUISplashTheme" parent="@style/OneUITheme">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/splash_background</item>
    </style>

    <style name="OneUIAboutTheme" parent="@style/OneUISplashTheme" />


    <style name="OneUI4Theme" parent="OneUITheme">
        <item name="android:theme">@style/OneUI4StyleMain</item>
        <item name="theme">@style/OneUI4StyleMain</item>
    </style>

    <style name="OneUI4SplashTheme" parent="@style/OneUI4Theme">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/splash_background</item>
    </style>

    <style name="OneUI4AboutTheme" parent="@style/OneUI4SplashTheme" />

</resources>