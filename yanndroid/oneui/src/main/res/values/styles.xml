<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Main-->
    <style name="OneUIStyleMain">
        <item name="colorAccent">?colorSecondary</item>
        <item name="colorBackgroundFloating">@color/sesl_background_floating</item>
        <item name="colorControlActivated">?colorSecondary</item>
        <item name="colorControlHighlight">@color/sesl_ripple_color</item>
        <item name="colorControlNormal">@color/sesl_control_normal_color</item>
        <item name="colorError">@color/sesl_error_color</item>

        <item name="progressActivatedColor">?colorPrimary</item>
        <item name="progressNormalColor">@color/sesl_progress_control_color_normal</item>

        <item name="android:progressBarStyle">@style/ProgressBarStyle</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Horizontal</item>
        <item name="android:progressBarStyleSmall">@style/ProgressBarStyle.Small</item>
        <item name="android:progressBarStyleLarge">@style/ProgressBarStyle.Large</item>
        <item name="android:progressBarStyleSmallTitle">@style/ProgressBarStyle.Title</item>
        <item name="android:progressBarStyleInverse">@style/ProgressBarStyle</item>
        <item name="android:progressBarStyleSmallInverse">@style/ProgressBarStyle.Small</item>
        <item name="android:progressBarStyleLargeInverse">@style/ProgressBarStyle.Large</item>

        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="seslSwitchBarStyle">@style/Base.Widget.AppCompat.SeslSwitchBar</item>
        <item name="seekBarStyle">@style/SeekBarStyle</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>

        <item name="android:listPreferredItemPaddingStart">
            @dimen/sesl_list_item_padding_horizontal
        </item>
        <item name="android:listPreferredItemPaddingEnd">@dimen/sesl_list_item_padding_horizontal
        </item>

        <item name="android:textSelectHandle">@drawable/sesl_text_select_handle_middle</item>
        <item name="android:textSelectHandleLeft">@drawable/sesl_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/sesl_text_select_handle_right</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
        <item name="textAppearanceListItem">@style/SubheadTextStyle</item>
        <item name="textAppearanceListItemSmall">@style/SubheadTextStyle</item>
        <item name="listPreferredItemHeight">@dimen/sesl_list_preferred_item_height</item>
        <item name="listPreferredItemHeightSmall">@dimen/sesl_list_preferred_item_height_small
        </item>
        <item name="listPreferredItemPaddingLeft">?android:listPreferredItemPaddingStart</item>
        <item name="listPreferredItemPaddingRight">?android:listPreferredItemPaddingEnd</item>

        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyle</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <item name="dropdownListPreferredItemHeight">@dimen/sesl_popup_menu_item_min_height</item>

        <item name="listChoiceBackgroundIndicator">@drawable/sesl_list_selector</item>

        <item name="actionMenuTextColor">@color/sesl_action_menu_text</item>

        <item name="tooltipForegroundColor">@color/sesl_tooltip_foreground</item>
        <item name="tooltipFrameBackground">@color/sesl_tooltip_background</item>

        <item name="switchStyle">@style/SwitchStyle</item>

        <item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarLayoutStyle</item>

        <item name="bottomNaviViewStyle">@style/BaseTabLayoutStyle</item>
        <item name="tabLayoutStyle">@style/TabLayoutStyle</item>

        <item name="dialogTheme">@style/DialogTheme</item>
        <item name="dialogPreferredPadding">@dimen/sesl_dialog_padding</item>
        <item name="alertDialogCenterButtons">false</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarStyle">@style/ButtonBarStyle</item>

        <item name="preferenceTheme">@style/PreferenceThemeStyle</item>

        <item name="editTextBackground">@drawable/sesl_edit_text_background</item>
        <item name="editTextColor">?android:textColorPrimary</item>
        <item name="editTextStyle">@style/EditTextWidgetStyle</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavButtonStyle</item>

        <item name="goToTopStyle">@drawable/sesl_list_go_to_top</item>

        <item name="android:listChoiceIndicatorSingle">@drawable/sesl_list_choice_btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/sesl_list_choice_btn_check</item>

        <item name="android:scrollbarThumbHorizontal">@drawable/sesl_scrollbar_handle</item>
        <item name="android:scrollbarThumbVertical">@drawable/sesl_scrollbar_handle</item>

    </style>

    <!--ProgressBar-->
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
    </style>

    <style name="ProgressBarStyle.Small" parent="@style/ProgressBarStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small</item>
    </style>

    <style name="ProgressBarStyle.Large" parent="@style/ProgressBarStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_large</item>
    </style>

    <style name="ProgressBarStyle.Title" parent="@style/ProgressBarStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small_title</item>
    </style>

    <style name="ProgressBarStyle.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
    </style>

    <style name="ProgressBarStyle.Horizontal.Large" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_vertical_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_vertical_tiny</item>
        <item name="android:maxHeight">@dimen/progress_bar_height</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
    </style>

    <style name="ProgressBarStyle.Circle" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">@dimen/sesl_progress_circle_size</item>
        <item name="android:maxHeight">@dimen/sesl_progress_circle_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
        <item name="android:progressDrawable">@drawable/sesl_progress_circle</item>
        <item name="android:minWidth">55.0dip</item>
        <item name="android:minHeight">55.0dip</item>
    </style>

    <style name="ProgressBarStyle.Circle.Small" parent="@style/ProgressBarStyle.Circle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small</item>
    </style>

    <style name="ProgressBarStyle.Circle.Large" parent="@style/ProgressBarStyle.Circle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_large</item>
    </style>


    <!--CheckBox-->
    <style name="CheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_check</item>
    </style>


    <!--CardView-->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">26dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/item_background_color</item>
    </style>


    <!--Switch-->
    <style name="SwitchStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/sesl_switch_background</item>
        <item name="android:textOn">@string/sesl_on_text</item>
        <item name="android:textOff">@string/sesl_off_text</item>
        <item name="android:thumb">@drawable/sesl_switch_thumb_selector</item>
        <item name="showText">false</item>
        <item name="switchPadding">0.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearance.AppCompat.Widget.Switch</item>
        <item name="track">@drawable/sesl_switch_track_selector</item>
    </style>


    <!--Button-->
    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sesl_btn_default</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/sesl_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_btn_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@string/sesl_font_family_regular</item>
    </style>

    <style name="ButtonStyle.Transparent">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:background">@drawable/sesl_btn_transparent</item>
    </style>

    <style name="ButtonStyle.Invert">
        <item name="android:backgroundTint">@color/sesl_btn_color_state</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Invert.Secondary">
        <item name="rippleColor">@color/item_color</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/item_color</item>
    </style>

    <style name="AboutPageButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/item_color</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sec-roboto-light</item>
        <item name="android:letterSpacing">0</item>

        <item name="cornerRadius">26dp</item>
        <item name="rippleColor">@color/item_color</item>
        <item name="android:backgroundTint">@color/button_background_color</item>

        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--Radio-->
    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_radio</item>
    </style>

    <style name="RadioButtonStyle.Vertical">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/sesl_btn_radio</item>
        <item name="android:textColor">@color/sesl_radiobutton_text_color</item>
    </style>


    <!--Drawer-->
    <style name="DrawerDividerStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/sesl_drawer_divider</item>
    </style>


    <!--SwitchBar-->
    <style name="TextAppearance.AppCompat.Widget.SeslSwitchBar" parent="@style/Base.TextAppearance.AppCompat.Widget.SeslSwitchBar" />

    <style name="Base.TextAppearance.AppCompat.Widget.SeslSwitchBar" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
    </style>

    <style name="Base.Widget.AppCompat.SeslSwitchBar" parent="@android:style/Widget">
        <item name="seslSwitchBarBackgroundActivatedColor">
            @color/sesl_switchbar_on_background_color
        </item>
        <item name="seslSwitchBarBackgroundColor">@color/sesl_switchbar_off_background_color</item>
        <item name="seslSwitchBarTextActivatedColor">@color/sesl_switchbar_text_color</item>
        <item name="seslSwitchBarTextColor">@color/sesl_switchbar_off_text_color</item>
    </style>


    <!--Seekbar-->
    <style name="SeekBarStyle" parent="@android:style/Widget">
        <item name="android:background">@drawable/sesl_seek_bar_background_borderless</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:thumb">@drawable/sesl_scrubber_control_anim</item>
        <item name="android:paddingStart">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:splitTrack">false</item>
        <item name="useDisabledAlpha">true</item>
    </style>


    <!--TextAppearance-->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/sesl_toolbar_title_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sesl_action_bar_text_color_title</item>
        <item name="fontFamily">sec-roboto-light</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.AppCompat.Title" parent="@style/Base.TextAppearance.AppCompat.Title" />

    <style name="Base.TextAppearance.AppCompat.Title" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sesl_text_size_title</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Base.TextAppearance.AppCompat" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sesl_text_size_body_1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>

    <style name="EditTextWidgetStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/sesl_edit_text_size</item>
        <item name="android:textColor">@color/sesl_edit_text_color</item>
        <item name="android:textColorHint">@color/sesl_edit_text_hint_color</item>
        <item name="android:background">?editTextBackground</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:hyphenationFrequency">none</item>
        <item name="android:textCursorDrawable">@drawable/sesl_text_cursor</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="SubheadTextStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/sesl_text_size_subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@string/sesl_font_family_regular</item>
    </style>

    <style name="TextAppearanceSmall" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sesl_text_size_small</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>


    <!--Spinner-->
    <style name="SpinnerStyle" parent="@style/Platform.Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/sesl_spinner_background</item>
        <item name="android:clickable">true</item>
        <item name="android:dropDownSelector">?android:listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@drawable/sesl_menu_popup_background</item>
        <item name="android:popupAnimationStyle">@style/ListPopupAnimStyle</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:popupElevation">@dimen/sesl_menu_popup_elevation</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="ListPopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_list_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_list_popup_exit</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/DropDownItemTextStyle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/sesl_popup_menu_item_top_padding</item>
        <item name="android:paddingBottom">@dimen/sesl_popup_menu_item_bottom_padding</item>
        <item name="android:checkMark">@drawable/sesl_spinner_checked_ic_selector</item>
        <item name="android:minWidth">@dimen/sesl_popup_menu_item_min_width</item>
        <item name="android:minHeight">@dimen/sesl_popup_menu_item_min_height</item>
        <item name="android:paddingStart">@dimen/sesl_popup_menu_item_start_padding</item>
        <item name="android:paddingEnd">@dimen/sesl_popup_menu_item_end_padding</item>
        <item name="checkMarkGravity">end</item>
    </style>

    <style name="DropDownItemTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/sesl_popup_menu_item_text_size</item>
        <item name="android:textColor">@color/sesl_spinner_dropdown_text_color</item>
        <item name="fontFamily">@string/sesl_font_family_regular</item>
    </style>


    <!--PopupMenuStyle-->
    <style name="PopupMenuStyle" parent="@android:style/Widget.Material.ListPopupWindow">
        <item name="android:popupElevation">8.0dip</item>
        <item name="android:popupBackground">@drawable/sesl_menu_popup_background</item>
        <item name="android:popupAnimationStyle">@style/MenuPopupAnimStyle</item>
        <item name="overlapAnchor">true</item>
        <item name="popupEnterTransition">@null</item>
        <item name="popupExitTransition">@null</item>
        <item name="android:dropDownSelector">@drawable/sesl_list_selector</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="MenuPopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_menu_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_menu_popup_exit</item>
    </style>


    <!--Snackbar-->
    <style name="SnackBarStyle" parent="@android:style/Widget">
        <item name="android:background">@drawable/sem_snackbar_frame_mtrl</item>
        <item name="android:paddingLeft">@dimen/design_snackbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/design_snackbar_padding_horizontal</item>
        <item name="android:maxWidth">@dimen/design_snackbar_max_width</item>
        <item name="android:minWidth">@dimen/design_snackbar_min_width</item>
        <item name="android:colorControlActivated">?colorSecondary</item>
        <item name="actionTextColorAlpha">@dimen/design_snackbar_action_text_color_alpha</item>
        <item name="animationMode">fade</item>
        <item name="elevation">@dimen/design_snackbar_elevation</item>
        <item name="maxActionInlineWidth">@dimen/design_snackbar_action_inline_max_width</item>
    </style>


    <!--Toolbar-->
    <style name="ActionButtonOverflow" parent="@android:style/Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/sesl_ic_menu_overflow</item>
        <item name="android:contentDescription">@string/sesl_more_options</item>
    </style>


    <!--ColorPicker-->
    <style name="ColorPickerPopupDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowMinWidthMajor">@dimen/sesl_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/sesl_dialog_min_width_minor</item>
        <item name="windowMinWidthMajor">@dimen/sesl_dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/sesl_dialog_min_width_minor</item>
    </style>

    <style name="ColorPickerHexTitleStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff909090</item>
    </style>

    <style name="ColorPickerHexEditStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/setting_color_picker_mode_text_selected_color</item>
    </style>

    <!--Related Card-->
    <style name="RelatedButtonStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
