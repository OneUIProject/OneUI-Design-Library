<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@id/background"
        android:width="@dimen/sesl_seekbar_track_height"
        android:gravity="fill_vertical|center">
        <nine-patch
            android:src="@drawable/sesl_progress_bar"
            android:tint="@color/sesl_seekbar_control_color_normal" />
    </item>
    <item
        android:id="@id/secondaryProgress"
        android:width="@dimen/sesl_seekbar_track_height"
        android:gravity="fill_vertical|center">
        <scale
            android:scaleHeight="100%"
            android:scaleGravity="bottom">
            <nine-patch
                android:src="@drawable/sesl_progress_bar"
                android:tint="@color/sesl_seekbar_control_color_secondary" />
        </scale>
    </item>
    <item
        android:id="@id/progress"
        android:width="@dimen/sesl_seekbar_track_height"
        android:gravity="fill_vertical|center">
        <scale
            android:scaleHeight="100%"
            android:scaleGravity="bottom">
            <nine-patch
                android:src="@drawable/sesl_progress_bar"
                android:tint="?colorPrimary" />
        </scale>
    </item>
</layer-list>