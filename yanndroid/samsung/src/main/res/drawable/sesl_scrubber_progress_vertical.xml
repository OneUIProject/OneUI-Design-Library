<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_vertical|center" android:id="@id/background" android:width="@dimen/sesl_seekbar_track_height">
        <nine-patch android:src="@drawable/sesl_progress_bar" android:tint="@color/sesl_seekbar_control_color_normal" />
    </item>
    <item android:gravity="fill_vertical|center" android:id="@id/secondaryProgress" android:width="@dimen/sesl_seekbar_track_height">
        <scale android:scaleHeight="100%" android:scaleGravity="bottom">
            <nine-patch android:src="@drawable/sesl_progress_bar" android:tint="@color/sesl_seekbar_control_color_secondary" />
        </scale>
    </item>
    <item android:gravity="fill_vertical|center" android:id="@id/progress" android:width="@dimen/sesl_seekbar_track_height">
        <scale android:scaleHeight="100%" android:scaleGravity="bottom">
            <nine-patch android:src="@drawable/sesl_progress_bar" android:tint="@color/sesl_seekbar_control_color_activated" />
        </scale>
    </item>
</layer-list>