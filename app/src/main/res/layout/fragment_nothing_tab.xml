<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_background_color"
    android:scrollbars="vertical"
    android:fillViewport="true"
    app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/nothing_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            style="?textAppearanceListItem"/>

    </LinearLayout>

</de.dlyt.yanndroid.oneui.NestedScrollView>